{
	"name": "xwg_task",
	"version": "0.0.2",
	"manifest_version": 2,

	// 简单描述
	"description": "a task_tip for xwg",
	"icons": {
		"16": "image/icon16.png",
		"48": "image/icon48.png"
	},
	// 选择默认语言
	// "default_locale": "en",

	// 浏览器小图表部分
	"browser_action": {
		"default_title": "任务进度",
		"default_icon": "image/icon16.png",
		"default_popup": "html/task.html"
	},
	"content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
